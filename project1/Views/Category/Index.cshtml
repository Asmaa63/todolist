@model List<Category>

<a asp-action="NewCategory" asp-controller="Category" class="btn btn-primary mb-5 mt-5 ">Crete New Category</a>
@if(Model.Count()==0){
    <h1 class="text-center text-t">There Is No Categories</h1>
     
}
else{
<table class="table table-striped w-75 mx-auto">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>  
            <th scope="col">Action</th>
        </tr>
        
    </thead>
    <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                var cate = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@cate.name</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@cate.id">
                            <img src="~/images/edit.png" />
                        </a>
                    <a asp-action="RemoveCategory" asp-route-id="@cate.id">
							<img src="~/images/delete.png" />
                     </a>
                </td>

            </tr>
        }
    </tbody>
</table>
}
