@model Category

@{
	var action = (Model == null) ? "SaveNewCategory" : "SaveEditCategory";
	var word = (Model == null) ? "Create" : "Update";
}
<div class="w-100 mx-auto">
	<h1 class="mb-2"> @word New Category </h1>
<form method="post" asp-controller="Category" asp-action="@action" asp-route-id="@Model?.id">
	<div>
		<label asp-for="name"></label>
		<input asp-for="name" class="form-control">
		<span asp-validation-for="name" class="text-danger"></span>
	</div>
	<input type="submit" class="btn btn-primary mt-4"/>
</form>
</div>

@section Scripts{
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}