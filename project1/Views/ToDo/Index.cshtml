@model List<Todo>
<a asp-action="NewTodo" asp-controller="Todo" class="btn btn-primary mb-5 mt-5 ">Crete New Todo</a>
@if (Model.Count() == 0)
{
    <h1 class="text-center text-t">There Is No Todos</h1>
}
else
{
    <table class="table table-striped w-75 mx-auto">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">CreateDate</th>
                <th scope="col">IsDone</th>
                <th scope="col">Category</th>
                <th scope="col">Action</th>
            </tr>

        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count ; i++)
            {
                var todo = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@todo.name</td>
                    <td>@todo.description</td>
                    <td>@todo.createdate</td>
                    @if (todo.isDone)
                    {
                        <td><img src="~/images/checked.png" /></td>
                    }
                    else
                    {
						<td><img src="~/images/remove.png" /></td>
                    }
                    <td>
                        @if(todo.category is null)
                        {
                            <p>NA</p>
                        }
                        else
                        {
                            @todo?.category?.name;
                        }
                    </td>
                    <td>
                        <a asp-action="EditTodo" asp-route-id="@todo.id">
                            <img src="~/images/edit.png" />
                        </a>
                        <a asp-action="RemoveTodo" asp-route-id="@todo.id">
                            <img src="~/images/delete.png" />
                        </a>
                        <a asp-action="Toggle" asp-route-id="@todo.id">
							<img src="~/images/checked.png" />
                        </a>
                        
                    </td>

                </tr>
            }
        </tbody>
    </table>
}